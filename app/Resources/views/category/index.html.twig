{% extends 'default/main.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../css/styles.css"/>
    <link type="text/css" rel="stylesheet" href="../../css/bootstrap.css"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}
    Categories
{% endblock %}

{% block main %}
    <div class="row">
        {% for category in categories %}
            <div class="col-sm-3">
                <div class="metrics text-muted">
                    <h2><a href="/category/{{ category.id }}/show">{{ category.name }}</a></h2>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
