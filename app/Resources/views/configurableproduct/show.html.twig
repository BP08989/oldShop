{% extends 'default/main.html.twig' %}

{% block title %}
    Symfony Shop
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/styles.css') }}"/>
    <link type="text/css" rel="stylesheet" href="{{ asset('css/bootstrap.css') }}"/>
{% endblock %}

{% block menu %}
{% endblock %}

{% block header %}

{% endblock %}

{% block main %}

    <script>
        function ready() {
            option = new Options({{ options|raw }});
            option.disableFirstRadio();
            $(':radio').change(function(){
                option.selected(this);
            });
        }

        document.addEventListener("DOMContentLoaded", ready);
    </script>

    <div class="row">
        <div class="col-sm-4">
            <div class="metrics text-muted">
                <img src="{{ product.getImages().get(0).getUrl() }}" id="mainImg" alt="img" style="width: 400px; height: 400px;"><br>
                <div class="description">
                    <br>
                    Category:
                    <a href="/category/{{ categoryName.id }}/show">{{ categoryName.name }}</a>
                    <br><br>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="metrics text-muted">
                <div class="description" id="MandatoryInfo">
                    {% for value in data %}
                        {{ value.name }}:
                        {{ value.value }}<br>
                    {% endfor %}
                </div>
                <div class="description" id="info">
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4" style="visibility: hidden;">
            <div class="metrics text-muted">
                <div class="description">
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="metrics text-muted">
                <div class="description">
                </div>
                <a id="cart" href="/cart/add/{{ product.id }}">
                    <input type="button" class="shopping-cart" value="Add to Cart">
                </a>
            </div>
        </div>

        <div class="col-sm-4" style="visibility: hidden;">
            <div class="metrics text-muted">
                <div class="description">
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('js/show.js') }}"></script>
{% endblock %}